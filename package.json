{
  "name": "ionic-mobile-emulator",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux"
  },
  "keywords": [
    "ionic",
    "mobile",
    "emulator",
    "android",
    "simulator"
  ],
  "author": "",
  "license": "ISC",
  "description": "Lightweight custom Electron-based emulator to preview and live reload Ionic apps with a realistic mobile frame.",
  "dependencies": {
    "chokidar": "^3.5.3",
    "electron": "^38.2.2",
    "electron-store": "^8.1.0",
    "monaco-editor": "^0.45.0",
    "vm2": "^3.9.19"
  },
  "devDependencies": {
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.ionic.mobileemulator",
    "productName": "Ionic Mobile Emulator",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**/*",
      "!build/**/*",
      "!*.md"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    }
  }
}
